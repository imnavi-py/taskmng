generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id     Int               @id @default(autoincrement())
  name   String
  status ProjectStatusEnum @default(Enable)
  tasks  Task[]
}

model Task {
  id          Int            @id @default(autoincrement())
  title       String
  description String
  status      TaskStatusEnum @default(Set)
  projectId   Int
  project     Project        @relation(fields: [projectId], references: [id])
}

model Agent {
  id          Int      @id @default(autoincrement())
  webhook     String
  logo        String?
  title       String
  description String?
  // params    Json
  // additionalParams Json?
  is_worked   workStatusEnum  @default(ok)
  createdAt   DateTime @default(now())
}

enum workStatusEnum {
  ok
  faild
}

enum ProjectStatusEnum {
  Enable
  Disable
}

enum TaskStatusEnum {
  Set
  Doing
  Done
  Cancell
}
